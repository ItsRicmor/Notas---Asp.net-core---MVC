@model NotesApp.ViewElements.Models.EditNoteViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<h2>Edita la nota</h2>

<div class="row mt-4">
    <div class="col-sm">
    </div>
    <div class="col-sm">
        <form asp-controller="Home" asp-action="Edit" method="post">
            @Html.HiddenFor(model => model.Id)
            <div class="form-group">
                <input asp-for="@Model.Title" class="form-control" placeholder="Titulo de nota">
            </div>
            <div class="form-group">
                <textarea asp-for="@Model.Description" class="form-control" rows="3" placeholder="Descripción">
                </textarea>
            </div>
            <button type="submit" class="btn btn-primary">Actualizar</button>
            <button onclick="@Url.Action("Index", "Home")" class="btn btn-danger">Cancelar</button>
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        </form>
    </div>
    <div class="col-sm">
    </div>
</div>

