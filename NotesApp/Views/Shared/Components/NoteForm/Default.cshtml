@model NoteModel

<div class="row mt-4">
    <div class="col-sm">
    </div>
    <div class="col-sm">
        <form asp-controller="Notes" asp-action="Create" method="post">
            <div class="form-group">
                <input asp-for="@Model.Title" type="text" class="form-control" id="note_title" placeholder="Titulo de nota">
            </div>
            <div class="form-group">
                <textarea asp-for="@Model.Description" class="form-control" id="note_description" rows="3" placeholder="Descripción">
                </textarea>
            </div>

            <button type="submit" class="btn btn-primary">Crear</button>
        </form>
    </div>
    <div class="col-sm">
    </div>
</div>
